@model CrudWeb.Models.studetail
@{
    ViewBag.Title = "Index";
}

<br>
<h2 style="color:red;">Add Your Details</h2>
<form>
    <div class="form-group">
        <label>Name</label>
        <!--<input type="text" class="form-control" placeholder="Enter name">  -->
        @Html.TextBoxFor(b => b.name, new { @class = "form-control", @placeholder="Enter name.." })
    </div>
    <div class="form-group">
        <label>Email</label>
        <!--<input type="text" class="form-control" placeholder="Enter email">  -->
        @Html.TextBoxFor(b => b.email, new { @class = "form-control", @placeholder=" Enter email.." })
    </div>
    <button type="submit" class="btn btn-danger">Submit</button>
</form>
<br />
<button type="button" class="btn btn-info" onclick="window.location.href = 'Home';">Home Page</button>
