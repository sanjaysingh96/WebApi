@model List<CrudBootstrap.Models.EmpModel>


@{
    ViewBag.Title = "EmpTable";
}


    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Tables</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        DataTables Advanced Tables
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>Salary</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr class="odd gradeX">
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td>@item.Email</td>
                                            <td>@item.Mobile</td>
                                            <td>@item.Salary</td>
                                            <td><a href="@Url.Action("Edit", "Emp", new { item.Id })" ><i class="fa fa-edit fa-fw"></i></a></td>
                                            <td><a href="@Url.Action("Delete", "Emp", new { item.Id })"><i class="fa fa-trash fa-fw"></i></a></td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

    </div>
    <!-- /.container-fluid -->

<script src="~/Scripts/AppJS/js/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });</script>

